extends layout

block content
  header
    h1= title

  section
    // search form
    form(method='POST' action='/search')
      div.form-group
        label(for='Pesquisa') Pesquise uma palavra:
        input#word.form-control(type='search', placeholder='Digite uma palavra' name='word')
        button.btn.btn-primary(type='submit' class="button") Pesquisar

  script.
  // list of words or only one
  if (list_words)
    section
      h2 Lista de Palavras encontradas:
        console.log('list_words')
        for n, i in list_words
          h2=n.palavra
          p.description= n.acepcao
          video(autoplay loop muted controls).
            #[source(src='http://www.acessibilidadebrasil.org.br/libras_3/public/media/palavras/videos/' + n.video)]
            p Para ver o video por favor habilite JavaScript e considere atualizar para um navegador que suporte #[a(href='http://videojs.com/html5-video-support/' target='_blank') Video HTML 5].
    a(href="/" class="button") Próxima Palavra
  else
    section
      h2 Palavra: <strong>#{word}</strong>
      p.description= description
      video(autoplay loop muted controls).
        #[source(src=videoUrl)]
        p Para ver o video por favor habilite JavaScript e considere atualizar para um navegador que suporte #[a(href='http://videojs.com/html5-video-support/' target='_blank') Video HTML 5].
    a(href="/" class="button") Próxima Palavra

  footer
    p.
      Baseado nas informações disponibilizadas em #[a(href='http://www.acessibilidadebrasil.org.br/libras_3/' target='_blank' title='Link para o site acessibilidade Brasil') Acessibilidade Brasil].
